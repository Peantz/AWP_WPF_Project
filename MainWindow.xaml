<Window x:Class="AWP_WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWP_WPF_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" >
    <Grid>
        <TabControl>
            <TabItem Header="Movie">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="MovieTable" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,226,303"/>
                </Grid>
            </TabItem>
            <TabItem Header="Show">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="ShowTable" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,226,303"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
