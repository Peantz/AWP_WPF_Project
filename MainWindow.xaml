<Window x:Class="AWP_WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWP_WPF_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" >
    <Grid>
        <TabControl Panel.ZIndex="1">
            <TabItem Header="Movie" Height="30">
                <DataGrid x:Name="MovieTable">
                    
                </DataGrid>
            </TabItem>
            <TabItem Header="Show" Height="30">
                <DataGrid x:Name="ShowTable" d:ItemsSource="{d:SampleData ItemCount=18}" Grid.ColumnSpan="2"/>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="DockPanelMenu" Margin="600,30,0,0" Visibility="Visible" Panel.ZIndex="100" >
                <Button x:Name="BtnAdd" Content="Add"/>
                <Button x:Name="BtnEdit" Content="Edit"/>
            <Button x:Name="BtnDelete" Content="Delete"/>
        </StackPanel>
        <Button x:Name="BtnCollapse" Content="Button" HorizontalAlignment="Left" Margin="750,1,0,0" VerticalAlignment="Top" Click="BtnCollapse_Click" Panel.ZIndex="100"/>
    </Grid>
</Window>
